{
    "compilerOptions": {
        "baseUrl": "./src",
        "paths": {
            "@components": ["components"],
            "@components/*": ["components/*"],
            "@containers": ["containers"],
            "@containers/*": ["containers/*"],
            "@pages": ["pages"],
            "@pages/*": ["pages/*"],
            "@providers": ["providers"],
            "@providers/*": ["providers/*"],
            "@routes": ["routes"],
            "@routes/*": ["routes/*"],
            "@utils": ["utils"],
            "@utils/*": ["utils/*"],
            "@hooks": ["hooks"],
            "@hooks/*": ["hooks/*"]
        }
    }
}
